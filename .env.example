# Server Configuration
PORT=4000

# Modo de ejecuci√≥n: production, development, test
# - production: responde a todos los chats de clientes, ignora mensajes propios (fromMe)
# - test: responde SOLO en tu chat personal de WhatsApp, ignora otros chats
NODE_ENV=production

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=30000

# Security
API_KEY=tu_api_key_secreta_aqui_cambiar_en_produccion
ALLOWED_ORIGINS=https://tu-dominio.com,http://localhost:3000

# Redis Cache
REDIS_URL=redis://localhost:6379

# Optional: Redis with auth
# REDIS_URL=redis://:password@localhost:6379

# Logging
LOG_LEVEL=info

# Supabase Configuration (Optional - for reservations and database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
# For automatic type generation with CLI (optional):
# SUPABASE_PROJECT_ID=your-project-id
# SUPABASE_ACCESS_TOKEN=sbp_your_personal_access_token
